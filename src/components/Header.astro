---
import { getLangFromUrl, useTranslations, localizePath } from "../i18n/utils";
import { languages } from "../i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<script>
  import { Collapse, Ripple, Dropdown, initTWE } from "tw-elements";

  initTWE({ Collapse, Ripple, Dropdown });

</script>

<header>
  <!-- Navigation bar -->
  <nav
    class="relative flex w-full items-center justify-between bg-white py-2 shadow-dark-mild dark:bg-body-dark lg:flex-wrap lg:justify-start lg:py-2"
    data-twe-navbar-ref
  >
    <div class="flex w-full flex-wrap  px-3">
      <div class="flex flex-auto justify-around items-center">
        <a href={localizePath("/#Inicio", lang)}>
          <img
            src="/Almacenajes-Minidepositos.webp"
            alt="Almacenajes minidepósitos"
            class="mx-4 my-2 justify-around"
            width="150"
          />
        </a>
        <!-- Hamburger menu button -->
        <button
          class="border-0 bg-transparent px-2 text-xl leading-none transition-shadow duration-150 ease-in-out hover:text-neutral-700 focus:text-neutral-700 dark:hover:text-white dark:focus:text-white lg:hidden"
          type="button"
          data-twe-collapse-init
          data-twe-target="#navbarSupportedContentX"
          aria-controls="navbarSupportedContentX"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <!-- Hamburger menu icon -->
          <span
            class="text-right right [&>svg]:h-7 [&>svg]:w-7 [&>svg]:stroke-black/50 dark:[&>svg]:stroke-neutral-200"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
            </svg>
          </span>
        </button>
      </div>

      <!-- Navigation links -->
      <div
        class="!visible hidden grow basis-[100%] items-center text-center lg:!flex lg:basis-auto lg:text-right"
        id="navbarSupportedContentX"
        data-twe-collapse-item
      >
        <ul
          class="me-auto mt-6 flex flex-col lg:flex-row"
          data-twe-navbar-nav-ref
        >
          <li class="mb-4 lg:mb-0 lg:pe-2" data-twe-nav-item-ref>
            <a
              class="block text-black transition duration-200 hover:text-orange-500 hover:ease-in-out focus:text-black/80 active:text-black/80 motion-reduce:transition-none dark:text-white/60 dark:hover:text-white/80 dark:focus:text-white/80 dark:active:text-white/80 lg:px-2"
              href={localizePath("/#Inicio", lang)}
              rel="noreferrer"
              data-twe-nav-link-ref
              data-twe-ripple-init
              data-twe-ripple-color="light">{t('header.inicio')}</a
            >
          </li>
          <li class="mb-4 lg:mb-0 lg:pe-2" data-twe-nav-item-ref>
            <a
              class="block text-black transition duration-200 hover:text-orange-500 hover:ease-in-out focus:text-black/80 active:text-black/80 motion-reduce:transition-none dark:text-white/60 dark:hover:text-white/80 dark:focus:text-white/80 dark:active:text-white/80 lg:px-2"
              href={localizePath("/#Cotizacion", lang)}
              rel="noreferrer"
              data-twe-nav-link-ref
              data-twe-ripple-init
              data-twe-ripple-color="light">{t('header.cotizacion')}</a
            >
          </li>
          <li class="mb-4 lg:mb-0 lg:pe-2" data-twe-nav-item-ref>
            <a
              class="block text-black transition duration-200 hover:text-orange-500 hover:ease-in-out focus:text-black/80 active:text-black/80 motion-reduce:transition-none dark:text-white/60 dark:hover:text-white/80 dark:focus:text-white/80 dark:active:text-white/80 lg:px-2"
              href={localizePath("/#Sucursales", lang)}
              rel="noreferrer"
              data-twe-nav-link-ref
              data-twe-ripple-init
              data-twe-ripple-color="light">{t('header.sucursales')}</a
            >
          </li>
          <div class=" m-auto mb-4 lg:mb-0 lg:pe-2 " data-twe-dropdown-ref>
            <a
              class="flex items-center text-center text-black transition duration-200 hover:text-orange-500 hover:ease-in-out focus:text-black/80 active:text-black/80 motion-reduce:transition-none dark:text-white/60 dark:hover:text-white/80 dark:focus:text-white/80 dark:active:text-white/80 lg:px-2"
              href="#"
              rel="noreferrer"
              type="button"
              id="dropdownMenuButton2"
              data-twe-dropdown-toggle-ref
              aria-expanded="false">
              {t('header.servicios')}
              <span class="ms-2 [&>svg]:w-5">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor">
                  <path
                    fill-rule="evenodd"
                    d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                    clip-rule="evenodd" />
                </svg>
              </span>
            </a>
            <ul
              class="absolute z-[1000] float-left m-0 hidden min-w-max list-none overflow-hidden rounded-lg border-none bg-white bg-clip-padding text-left text-base shadow-lg data-[twe-dropdown-show]:block dark:bg-surface-dark"
              aria-labelledby="dropdownMenuButton1"
              data-twe-dropdown-menu-ref>
              <li>
                <a
                  class="block w-full whitespace-nowrap  hover:text-orange-500 hover:ease-in-out px-4 py-2 text-sm font-normal text-neutral-700 hover:bg-slate-50 focus:bg-slate-50 focus:outline-none active:bg-slate-50 active:no-underline dark:bg-surface-dark dark:text-white dark:hover:bg-neutral-800/25 dark:focus:bg-neutral-800/25 dark:active:bg-neutral-800/25"
                  href={localizePath("/#Soluciones", lang)}
                  rel="noreferrer"
                  data-twe-dropdown-item-ref
                  >{t('header.soluciones')}</a
                >
              </li>
              <li>
                <a
                  class="block w-full whitespace-nowrap  hover:text-orange-500 hover:ease-in-out px-4 py-2 text-sm font-normal text-neutral-700 hover:bg-slate-50 focus:bg-slate-50 focus:outline-none active:bg-slate-50 active:no-underline dark:bg-surface-dark dark:text-white dark:hover:bg-neutral-800/25 dark:focus:bg-neutral-800/25 dark:active:bg-neutral-800/25"
                  href={localizePath("/#Beneficios", lang)}
                  rel="noreferrer"
                  data-twe-dropdown-item-ref
                  >{t('header.beneficios')}</a
                >
              </li>
              <li>
                <a
                  class="block w-full whitespace-nowrap  hover:text-orange-500 hover:ease-in-out px-4 py-2 text-sm font-normal text-neutral-700 hover:bg-slate-50 focus:bg-slate-50 focus:outline-none active:bg-slate-50 active:no-underline dark:bg-surface-dark dark:text-white dark:hover:bg-neutral-800/25 dark:focus:bg-neutral-800/25 dark:active:bg-neutral-800/25"
                  href={localizePath("/#Steps", lang)}
                  rel="noreferrer"
                  data-twe-dropdown-item-ref
                  >{t('header.como_funciona')}</a
                >
              </li>
            </ul>
          </div>
          <li class="mb-2 lg:mb-0 lg:pe-2" data-twe-nav-item-ref>
            <a
              class="block text-black transition duration-200 hover:text-orange-500 hover:ease-in-out focus:text-black/80 active:text-black/80 motion-reduce:transition-none dark:text-white/60 dark:hover:text-white/80 dark:focus:text-white/80 dark:active:text-white/80 lg:px-2"
              href={localizePath("/#Size", lang)}
              rel="noreferrer"
              data-twe-nav-link-ref
              data-twe-ripple-init
              data-twe-ripple-color="light">{t('header.tamanos')}</a
            >
          </li>
          <li class="mb-2 lg:mb-0 lg:pe-2" data-twe-nav-item-ref>
            <a
              class="block text-black transition duration-200 hover:text-orange-500 hover:ease-in-out focus:text-black/80 active:text-black/80 motion-reduce:transition-none dark:text-white/60 dark:hover:text-white/80 dark:focus:text-white/80 dark:active:text-white/80 lg:px-2"
              href={localizePath("/#Recomendaciones", lang)}
              rel="noreferrer"
              data-twe-nav-link-ref
              data-twe-ripple-init
              data-twe-ripple-color="light">{t('header.recomendaciones')}</a
            >
          </li>
          <li class="mb-2 lg:mb-0 lg:pe-2" data-twe-nav-item-ref>
            <a
              class="block text-black transition duration-200 hover:text-orange-500 hover:ease-in-out focus:text-black/80 active:text-black/80 motion-reduce:transition-none dark:text-white/60 dark:hover:text-white/80 dark:focus:text-white/80 dark:active:text-white/80 lg:px-2"
              href={localizePath("/#Contacto", lang)}
              rel="noreferrer"
              data-twe-nav-link-ref
              data-twe-ripple-init
              data-twe-ripple-color="light">{t('header.contacto')}</a
            >
          </li>
          <li class="mb-2 lg:mb-0 lg:pe-2">
            <div class="language-selector flex items-center">
              <a 
                href="/es/" 
                class={`${lang === 'es' ? 'font-bold text-orange-500' : ''} px-2 hover:text-orange-500 transition duration-200 flex items-center gap-1`}
              >
                <img src="/assets/icons/panama-flag.svg" alt="Bandera de Panamá" width="20" height="14" class="inline" />
                <span>ES</span>
              </a>
              <span class="text-gray-400">|</span>
              <a 
                href="/en/" 
                class={`${lang === 'en' ? 'font-bold text-orange-500' : ''} px-2 hover:text-orange-500 transition duration-200 flex items-center gap-1`}
              >
                <img src="/assets/icons/usa-flag.svg" alt="United States Flag" width="20" height="14" class="inline" />
                <span>EN</span>
              </a>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <div class="flecha">
    <a href={localizePath("/#Inicio", lang)} rel="noreferrer" aria-label="flecha_subir_inicio">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-9">
        <path stroke-linecap="round" stroke-linejoin="round" d="m15 11.25-3-3m0 0-3 3m3-3v7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
      </svg>
      
  </a>
    
  </div>
</header>

<style>
  header {
    background: #f5f5f5;
    width: 100%;
    position: fixed;
    z-index: 1000;
    margin-bottom: 66px;
  }
  .text-primary {
    color: #f26233;
  }
  .primary {
    background-color: #f26233;
  }

  :hover.primary {
    background-color: #c44e1e;
  }

  .flecha{
    width: 50px;
    padding: 8px 4px;
    line-height: 40px;
    z-index: 999;
    cursor: pointer;
    position: fixed;
    bottom: 50px;
    right: 0;
    background-color: #f26233;
    color: #ffffff;
    text-align: center;
    font-size: 30px;
    text-decoration: none;
    border-radius: 5px 0 0 5px;
  }

  .flecha:hover {
    background-color: #c44e1e;
    color: #ffffff;
}

</style>

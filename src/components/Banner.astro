---
console.log("javascript");
import "../css/input.css";
import { Image } from "astro:assets";
import texto from "/src/assets/Mes_gratis.webp";
import Prom_ago from "/src/assets/Agosto.webp";
import chica from "/src/assets/Chica.webp";
---

<section id="Inicio" class="xs:pt-16 sm:pt-16 md:pt-18 lg:pt-16">
    <!-- Hero section with background image, heading, subheading and button -->
    <div
        class="max-w-lg md:grid md:max-w-none sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 justify-around"
    >
        <div
            class="bg-[url('/src/assets/Fondo_izq.webp')] sm:w-full md:h-full lg:max-h-lg lg:h-full md:h-auto md:w-full lg:w-full h-5/6 bg-cover bg-no-repeat m-0 p-0 m-auto"
        >
            <div
                class=" flex m-auto sm:w-full md:h-full md:w-full lg:w-full lg:h-full h-5/6 col-span-1"
            >
                <div
                    class="m-auto flex xs:h-2/6 xs:w-3/5 sm:w-2/5 sm:h-2/6 md:w-4/5 md:h-3/6 lg:h-4/6 lg:w-3/5 "
                >
                    <Image
                        src={Prom_ago}
                        alt="Fondo"
                        class="bg-contain bg-no-repeat"
                    />
                </div>
            </div>
        </div>

        <div
            class="bg-[url('/src/assets/Fondo_der.webp')] lg:max-h-lg sm:w-5/6 md:w-full md:h-auto lg:w-full lg:h-auto h-5/6 bg-cover bg-no-repeat m-0 p-0 col-span-2 sm:flex-row md:flex lg:flex"
        >
            <div class="sm:w-5/6 md:w-10/12 lg:w-6/12">
                <div class="mt-0">
                    <div class="flex flex-row">
                        <div
                            class="flex-row items-center mt-4 max-w-xs col-span-1 m-auto"
                        >
                            <Image
                                src={texto}
                                alt="Promoción alquiler de minidepósitos y bodegas un mes gratis"
                                class="bg-cover bg-no-repeat w-full h-auto ml-0"
                            />
                            <p class="p-8 text-md text-white text-center">
                                Reserva tu espacio hoy <br />
                                y guarda tus cosas <br />
                                sin costo inicial!
                            </p>
                            <div class="m-auto text-center">
                                <a
                                    type="button"
                                    href="#Cotizacion"
                                    class="inline-block m-3 rounded border-2 text-primary font-bold border-orange-500 primary px-6 pb-[6px] pt-2 text-xs uppercase leading-normal text-neutral transition duration-150 ease-in-out hover:border-orange-300 focus:border-neutral-300 focus:text-neutral-200 focus:outline-none focus:ring-0 active:border-neutral-300 active:text-neutral-200"
                                    rel="noreferrer"
                                    data-twe-ripple-init
                                    data-twe-ripple-color="light"
                                >
                                    Obtén tu cotización ahora
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                <div
                class=" flex m-auto sm:w-full md:h-full md:w-full lg:w-full lg:h-full h-5/6 col-span-1"
            >
                <div
                    class="m-auto flex xs:h-full xs:w-3/5 sm:w-2/5 sm:h-full md:w-full md:h-8/12 lg:h-full lg:w-10/12border-2"
                >
                            <Image
                                src={chica}
                                alt="Confianza y satisfacción en los servicios de almacenamiento"
                                class="object-cover object-bottom"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .text-primary {
            color: #f26233;
        }
        .primary {
            background-color: #ffffff;
        }

        :hover.primary {
            background-color: #f26233;
            color: #ffffff;
        }
    </style>
</section>

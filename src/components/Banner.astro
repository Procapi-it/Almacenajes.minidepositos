---
console.log("javascript");
import "../css/input.css";
import { Image } from "astro:assets";
import texto from "/src/assets/Mes_gratis.webp";
import Prom_ago from "/src/assets/Agosto.webp";
import chica from "/src/assets/Chica.webp";
---

<section id="Inicio" class="xs:pt-16 sm:pt-16 md:pt-18 lg:pt-16">
    <!-- Hero section with background image, heading, subheading and button -->

    <div class="mx-auto max-w-7xl px-6 pb-16 lg:px-8">
        <div
            class="mx-auto max-w-lg md:grid md:max-w-none sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 justify-around"
        >
            <div>
                <div
                    class="bg-[url('/src/assets/Fondo_izq.webp')] lg:max-h-lg lg:h-full md:h-1/2 h-5/6 bg-cover bg-no-repeat m-0 p-0"
                >
                    <div class="mt-2">
                        <div class="flex flex-col">
                            <div class="flex items-center mt-2">
                                <div class="relative max-w-xs col-span-1">
                                    <div
                                        class="flex m-auto lg:max-h-lg lg:h-full md:h-1/2 h-5/6"
                                    >
                                        <Image
                                            src={Prom_ago}
                                            alt="Fondo"
                                            class="bg-contain bg-no-repeat w-fit lg:h-3/5 md:h-5/6 sm:h-2/5 m-auto"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div
                class="bg-[url('/src/assets/Fondo_der.webp')] lg:max-h-lg lg:h-full md:h-1/2 h-5/6 bg-cover bg-no-repeat m-0 p-0 col-span-2"
            >
                <div class="border-red-600 border-2">
                    <div class="mt-2">
                        <div class="flex flex-col">
                            <div class="flex items-center mt-2">
                                <div class="relative max-w-xs col-span-1">
                                    <Image
                                        src={texto}
                                        alt="Fondo"
                                        class="bg-cover bg-no-repeat w-3/5 h-3/5 m-auto"
                                    />
                                </div>
                                <p class="p-8 text-md text-white text-center">
                                    Reserva tu espacio hoy <br />
                                    y guarda tus cosas <br />
                                    sin costo inicial!
                                </p>

                                <div class="flex items-center mt-6">
                                    <a
                                        type="button"
                                        href="#Cotizacion"
                                        class="inline-block mb-3 rounded border-2 text-primary font-bold border-orange-500 primary px-6 pb-[6px] pt-2 text-xs uppercase leading-normal text-neutral transition duration-150 ease-in-out hover:border-orange-300 focus:border-neutral-300 focus:text-neutral-200 focus:outline-none focus:ring-0 active:border-neutral-300 active:text-neutral-200"
                                        rel="noreferrer"
                                        data-twe-ripple-init
                                        data-twe-ripple-color="light"
                                    >
                                        Obtén tu cotización ahora
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="mt-2">
                        <div class="flex flex-col">
                            <div class="flex justify-around mt-2">
                                <Image
                                    src={chica}
                                    alt="Almacenaje con promoción de 1 mes gratis en mini depósitos"
                                    class="object-cover object-bottom"
                                    width="400"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .text-primary {
            color: #f26233;
        }
        .primary {
            background-color: #ffffff;
        }

        :hover.primary {
            background-color: #f26233;
            color: #ffffff;
        }
    </style>
</section>
